<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f6"
    android:orientation="vertical">
    <include layout="@layout/layout_title_top2" />
    <!-- 底部导航 -->
    <LinearLayout
    android:background="@color/white"
    android:id="@+id/dervice"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/tab_layout_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:id="@+id/layout_ble_scan"
                android:paddingTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center">

                <ImageView
                    android:src="@drawable/icon_ble"
                    android:id="@+id/tab_img_home"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:background="#ffffff"
                    android:focusable="false"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/tab_text_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tab_img_home"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:text="蓝牙添加"
                    android:textColor="#abadbb"
                    android:textSize="10dp" />

            </RelativeLayout>


        </FrameLayout>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_ble"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:paddingTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center">

                <ImageView
                    android:src="@drawable/icon_scan"
                    android:id="@+id/tab_img_shop"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:background="#ffffff"
                    android:focusable="false"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/tab_text_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tab_img_shop"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:text="扫码添加"
                    android:textColor="#abadbb"
                    android:textSize="10dp" />

            </RelativeLayout>



        </FrameLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tab_layout_show"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:paddingTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center">

                <ImageView
                    android:src="@drawable/icon_serial_no"
                    android:id="@+id/tab_img_discovery"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:background="#ffffff"
                    android:focusable="false"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/tab_text_discovery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tab_img_discovery"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:text="WIFI添加"
                    android:textColor="#abadbb"
                    android:textSize="10dp" />

            </RelativeLayout>



        </FrameLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/tab_layout_me"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:paddingTop="5dp"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">
            <RelativeLayout
                android:paddingTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center">
                <ImageView
                    android:src="@drawable/icon_more"
                    android:id="@+id/tab_img_me"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:background="#ffffff"
                    android:focusable="false"
                    android:scaleType="centerInside" />
                <TextView
                    android:id="@+id/tab_text_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tab_img_me"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2.2dp"
                    android:text="更多设备"
                    android:textColor="#abadbb"
                    android:textSize="10dp" />
            </RelativeLayout>


        </FrameLayout>

    </RelativeLayout>

</LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >

            <ImageView
                android:src="@drawable/icon_my_drivers"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:background="#ffffff"
                android:focusable="false"
                android:scaleType="centerInside" />


        </RelativeLayout>
        <RelativeLayout
            android:gravity="left|center"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:text="我的设备"
                        android:textColor="@color/appTextColor"
                        android:textSize="14dp" />

        </RelativeLayout>

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@id/recyclerView"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"  >
    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/no_driver"
            android:gravity="center"
            android:textSize="18dp"
            android:text="你还没有任何设备"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:gravity="center"
            android:layout_below="@+id/no_driver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:textSize="18dp"
                android:text="请先"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_add_driver"
                android:textColor="@color/mainColorBlue"
                android:textSize="18dp"
                android:text="添加设备"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>