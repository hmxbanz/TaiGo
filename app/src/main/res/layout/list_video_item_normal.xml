<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginTop="10dp">

  <!--<TextView-->
      <!--android:id="@+id/title"-->
      <!--android:text="默认标题"-->
      <!--android:textSize="16dp"-->
      <!--android:padding="5dp"-->
      <!--android:layout_width="match_parent"-->
      <!--android:layout_height="wrap_content" />-->
  <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
      android:id="@+id/video_item_player"
      android:layout_width="match_parent"
      android:layout_height="@dimen/post_media_height"/>
  <LinearLayout
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="50dp">
    <com.xtdar.app.view.widget.SelectableRoundedImageView
        android:src="@drawable/logo"
        android:scaleType="centerCrop"
        app:sriv_left_bottom_corner_radius="50dip"
        app:sriv_left_top_corner_radius="50dip"
        app:sriv_right_bottom_corner_radius="50dip"
        app:sriv_right_top_corner_radius="50dip"
        app:sriv_border_width="2dip"
        app:sriv_border_color="@color/white"
        android:id="@id/avatar"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
      <TextView
          android:id="@+id/nickname"
          android:text="用户名"
          android:padding="5dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
      <TextView
          android:paddingLeft="5dp"
          android:id="@+id/createdate"
          android:text="2017-4-8"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/click_count"
        android:text="观看："
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/comment_count"
        android:text="评论："
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

  </LinearLayout>


</LinearLayout>